<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_debug">
        <Preference
            android:key="redownload_data"
            android:persistent="false"
            android:selectable="true"
            android:title="@string/pref_redownload_data"
            android:summary="@string/pref_redownload_data_detail" />
        <EditTextPreference
            android:key="tba_host"
            android:summary="@string/pref_tba_host_detail"
            android:title="@string/pref_tba_host" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="analytics_debug_key"
            android:summary="@string/pref_analytics_detail"
            android:title="@string/pref_analytics_key" />
        <Preference
            android:key="add_mytba_item"
            android:selectable="true"
            android:title="Add sample item to myTBA"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="analytics_dry_run"
            android:summary="@string/pref_dry_run_detail"
            android:title="@string/pref_dry_run" />
        <Preference
            android:key="test_upcoming_match_notification"
            android:selectable="true"
            android:title="@string/pref_test_upcoming_match_notification" />
        <Preference
            android:key="test_score_notification"
            android:selectable="true"
            android:title="@string/pref_test_score_notification" />
        <Preference
            android:key="select_account"
            android:selectable="true"
            android:title="@string/pref_select_account" />
    </PreferenceCategory>

</PreferenceScreen>